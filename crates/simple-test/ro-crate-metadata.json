    {
      "@id": "#acceptance-test-sync",
      "@type": "HowTo",
      "name": "Synchronous CLI acceptance test",
      "description": "Execute the service locally with the sample input and validate the output string.",
      "tool": [
        {
          "@id": "#tool-oscar-cli"
        }
      ],
      "supply": [
        {
          "@id": "#supply-input-txt"
        }
      ],
      "step": [
        {
          "@type": "HowToStep",
          "position": 1,
          "text": "Run the service using the provided sample input.",
          "potentialAction": {
            "@type": "ConsumeAction",
            "name": "run",
            "object": {
              "@id": "input.txt"
            },
            "target": {
              "@type": "EntryPoint",
              "actionApplication": {
                "@id": "#oscar-cli"
              }
            },
            "result": {
              "@id": "#expected-output-characters"
            },
            "additionalProperty": [
              {
                "@type": "PropertyValue",
                "propertyID": "commandTemplate",
                "value": "oscar-cli service run simple-test -i {input}"
              }
            ]
          }
        }
      ]
    },
    {
      "@id": "#acceptance-test-async",
      "@type": "HowTo",
      "name": "Asynchronous CLI acceptance test",
      "description": "Upload the sample input to the service storage and then download the most recent output to verify its contents.",
      "tool": [
        {
          "@id": "#tool-oscar-cli"
        }
      ],
      "supply": [
        {
          "@id": "#supply-input-txt"
        }
      ],
      "step": [
        {
          "@type": "HowToStep",
          "position": 1,
          "text": "Upload the sample input using the OSCAR CLI.",
          "potentialAction": {
            "@type": "TransferAction",
            "name": "put-file",
            "object": {
              "@id": "input.txt"
            },
            "target": {
              "@type": "EntryPoint",
              "actionApplication": {
                "@id": "#oscar-cli"
              }
            },
            "additionalProperty": [
              {
                "@type": "PropertyValue",
                "propertyID": "commandTemplate",
                "value": "oscar-cli service put-file simple-test {source}"
              }
            ]
          }
        },
        {
          "@type": "HowToStep",
          "position": 2,
          "text": "Wait for the remote execution to complete before retrieving the result.",
          "timeRequired": "PT20S"
        },
        {
          "@type": "HowToStep",
          "position": 3,
          "text": "Download the latest output and confirm it contains the expected substring.",
          "potentialAction": {
            "@type": "TransferAction",
            "name": "get-file",
            "target": {
              "@type": "EntryPoint",
              "actionApplication": {
                "@id": "#oscar-cli"
              }
            },
            "result": {
              "@id": "#expected-output-characters"
            },
            "additionalProperty": [
              {
                "@type": "PropertyValue",
                "propertyID": "commandTemplate",
                "value": "oscar-cli service get-file simple-test --download-latest-into {destination}"
              }
            ]
          }
        }
      ]
    },
    {
